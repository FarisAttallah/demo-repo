<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                background-color: #0d0e0f;
            }

            body {
                color: white;
                font: 400 1rem "Roboto", sans-serif;
            }

            input {
                border-radius: 8px 8px 8px 8px;
                border: 0;
                height: 30px;
                padding: 4px 16px;
                background-color: white;
            }

            .centered {
                text-align: center;
            }
        </style>
        
        <title>Remove Pokemon Teams</title>
    </head>

    <body>
        <br><br>
        <h1 style="text-align: center">Remove <strong>ALL</strong> Pokemon Teams</h1>

        <br><br>
        <form action='<%- url %>' method="post" onsubmit="return confirmRemoveAll()">
            <div class="centered">
                <input type="submit" value="Remove all Pokemon Teams">
            </div>
        </form>

        <br><br>

        <div class="centered"><a href="/">HOME</a></div>

        <script>
            function confirmRemoveAll() {
                let message = "";
                message += "Are you sure you want to remove all Pokemon Teams?";
                if (confirm(message) === false) {
                    return false;
                } else {
                    return true;
                }
            }
        </script>
    </body>    
</html>